generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  OPEN
  APPLIED
  INTERVIEWING
  REJECTED
  OFFER
}

model Job {
  id           String    @id @default(uuid())
  company      String
  role         String
  location     String
  url          String    @unique
  category     String    @default("Software Engineering")
  age          String?
  ageMinutes   Int?
  status       JobStatus @default(OPEN)
  appliedAt    DateTime?
  firstSeenAt  DateTime  @default(now())
  lastSeenAt   DateTime  @updatedAt
}