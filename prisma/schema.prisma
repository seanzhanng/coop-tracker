generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          String   @id @default(uuid())
  company     String
  role        String
  location    String
  url         String   @unique
  age        String?
  ageMinutes Int?
  applied     Boolean  @default(false)
  appliedAt   DateTime?
  firstSeenAt DateTime @default(now())
  lastSeenAt  DateTime @updatedAt
}
